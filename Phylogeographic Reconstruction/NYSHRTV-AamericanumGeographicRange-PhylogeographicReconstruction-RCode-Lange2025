install.packages(c("rgbif", "sf", "dplyr", "ggplot2", "concaveman", "rnaturalearth"))
library(rgbif)
library(sf)
library(dplyr)
library(ggplot2)
library(concaveman)
library(rnaturalearth)
tick_data <- occ_search(
scientificName = "Amblyomma americanum",
hasCoordinate = TRUE,
limit = 10000
)
tick_df <- tick_data$data %>%
select(decimalLongitude, decimalLatitude) %>%
filter(!is.na(decimalLongitude), !is.na(decimalLatitude))
tick_sf <- st_as_sf(tick_df, coords = c("decimalLongitude", "decimalLatitude"), crs = 4326)
concave <- concaveman(tick_sf)
world <- ne_countries(scale = "medium", returnclass = "sf")
install.packages("rnaturalearthdata")
world <- ne_countries(scale = "medium", returnclass = "sf")
ggplot() +
geom_sf(data = world, fill = "gray95", color = "gray70") +
geom_sf(data = tick_sf, color = "blue", size = 0.5, alpha = 0.3) +
geom_sf(data = concave, fill = "red", alpha = 0.3) +  # or hull / buffered_range
theme_minimal()
st_write(concave, "amblyomma_range.geojson", driver = "GeoJSON")
